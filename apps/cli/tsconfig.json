{
	"compilerOptions": {
		"strict": true,
		"rootDir": "src",
		"outDir": "dist",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"declaration": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
